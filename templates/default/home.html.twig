    </div>

	
    
<div class="container d-flex flex-wrap justify-content-around">
    {% for job in jobs %}
    <div style="width:40% !important;">
            <div class="card card-short  m-5">
                <div class="card-body">
                    <div class="row d-flex justify-content-around">
                        <div class="col-4 profile-img">
                            <a href="{{ path('job_list') }}"><img class="img-fluid" src="{{ asset('img/category/' ~ logoCategories[job.category]) }}" alt="{{ job.category }}"></a>
                        </div>
                        <div class="col-8 profile-content">
                            <p>{{job.title}}</p>
                            <p>{{job.category}}</p>
                            <p>{{job.city}}</p>
                        </div>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row d-flex justify-content-around">
                        <div class="col-8">
                            <p>Publi√©e le : {{ job.publishedAt|date('d-m-Y') }}</p>
                        </div>
                        <div class="col-4">
                            <a href="{{ path('job_view', {id: job.id}) }}" class="btn btn-outline-primary btn-card">Voir plus ...</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    
        {% endfor %}
</div>

{% endblock %}
