{% extends 'base.html.twig' %}

{% block title %} Outdeed - Accueil{% endblock %}

{% block body %}

<div id="carouselHero" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselHero" data-bs-slide-to="0" class="active" aria-current="true"
            aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselHero" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselHero" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">

        <div class="carousel-item active">
            <img src="{{ asset('img/home/desk.jpg') }}" class="d-block w-100" alt="...">
            <div class="mb-3 carousel-caption d-none d-md-block">
                <h1 class="mb-1" id="titre_home">Bienvenue chez Outdeed</h1>
                <p>L'emploi ne vient pas à vous ? Venez vers l'emploi</p>
            </div>
        </div>

        <div class="carousel-item">
            <img src="{{ asset('img/home/ecran.jpg') }}" class="d-block w-100" alt="...">
            <div class="mb-3 carousel-caption d-none d-md-block">
                <h1 class="mb-1" id="titre_home">Trouvez l'emploi de vos rêves</h1>
                <button class="btn btn-outline-light" href=" {{ path('job_list') }} ">Voir les offres d'emplois <i class="fas fa-arrow-right"></i> </button>
            </div>
        </div>

        <div class="carousel-item">
            <img src="{{ asset('img/home/main.jpg') }}" class="d-block w-100" alt="...">
            <div class="mb-3 carousel-caption d-none d-md-block">
                <h1 class="mb-1" id="titre_home">Dans l'entreprise de vos rêves</h1>
                <button class="btn btn-outline-light" href=" {{ path('job_list') }} ">Voir les entreprises <i class="fas fa-arrow-right"></i> </button>
            </div>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselHero" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselHero" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>



<div class="container d-flex flex-wrap justify-content-around">
    {% for job in jobs %}
    <div style="width:40% !important;">
        <div class="card card-short  m-5">
            <div class="card-body">
                <div class="row d-flex justify-content-around">
                    <div class="col-4 profile-img">
                        <a href="{{ path('job_list') }}"><img class="img-fluid"
                                src="{{ asset('img/category/' ~ logoCategories[job.category]) }}"
                                alt="{{ job.category }}"></a>
                    </div>
                    <div class="col-8 profile-content">
                        <p>{{job.title}}</p>
                        <p>{{job.category}}</p>
                        <p>{{job.city}}</p>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row d-flex justify-content-around">
                    <div class="col-8">
                        <p>Publiée le : {{ job.publishedAt|date('d-m-Y') }}</p>
                    </div>
                    <div class="col-4">
                        <a href="{{ path('job_view', {id: job.id}) }}" class="btn btn-outline-primary btn-card">Voir
                            plus ...</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {% endfor %}
</div>

{% endblock %}