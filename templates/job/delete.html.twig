{% extends 'base.html.twig' %}

{%block body %}
{# affiche tous les messages flash #}
    {% for level, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ level }}">
                {{ message|raw }} {# le raw ici, permet de ne pas Ã©chapper le html et de l'afficher tel quel #}
            </div>
        {% endfor %}
    {% endfor %}
    <form method="post">
        <h2>Are you sure you want to delete this job offer?</h2>

        <P>{{job.title}}</P>
        
        <button type="submit" name ="submit" class="btn btn-primary" value ="Delete"></button>
    </form>

{% endblock %}