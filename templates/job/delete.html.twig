{% extends 'base.html.twig' %}

{%block body %}
{# affiche tous les messages flash #}
    {% for level, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ level }}">
                {{ message|raw }} {# le raw ici, permet de ne pas échapper le html et de l'afficher tel quel #}
            </div>
        {% endfor %}
    {% endfor %}
    <form method="post">
        <h2 class="font_title">Êtes-vous sûr de vouloir supprimer cette offre d'emploi ?</h2>

        <p class="font_text">{{job.title}}</p>
        
        <input type="submit" name="submit" class="btn btn-danger" value="Confimer la suppression">
    </form>

{% endblock %}