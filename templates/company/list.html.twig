{% extends 'base.html.twig' %}

{% block title %}Outdeed - Fiche entreprise{% endblock %}

{% block body %}
{# # affiche tous les messages flash #}
{% for level, messages in app.flashes %}
{% for message in messages %}
<div class="alert alert-{{ level }}">{{ message|raw}}
</div>
{% endfor %}
{% endfor %}
<div class="container py-3">
    <div class="row justify-content-center ">
        <div class="col-12 col-md-10 col-lg-8 blanc">
            <h1 class="text-center">Liste des entreprises</h1>
        </div>
    </div>
</div>

<div class="container">
    <div id="form_sort_company" class="row mt-3">
        <div class="col-6"></div>
        <div class="col-3 ms-3">
            <form method="get" id="company_sort">
                <select class="form-select" name="sort" id="sort">
                    <option value="0" selected disabled>-- Trier par --</option>
                    <option value="nameASC">Ordre alphabetique</option>
                    <option value="nameDESC">Ordre alphabetique inversé</option>
                    <option value="cityASC">Ville (Ordre alphabetique)</option>
                    <option value="cityDESC">Ville (Ordre alphabetique inversé)</option>
                </select>
        </div>
        <div class="col-1">
            <input type="submit" class="btn btn-success" value="Go !">
            </form>
        </div>
        <div class="col-1">

        </div>
    </div>

</div>

<div class="container mt-3 py-3">
    <div class="row justify-content-center">
        {% for company in companies %}
        <div class="col-md-10 col-lg-8 blanc m-3">
            <div class="card m-3">
                <div class="card-header p-4">
                    <h5 class="font_title"> {{ company.name}}</h5>
                </div>
                <div class="card-body d-flex justify-content-between">
                        <div>
                            <p class="card-title">{{ company.category }}</p>
                            <p class="card-text">{{ company.description|slice(0, 50) }}...</p>
                            <a href="{{ path('company_view', {id: company.id}) }}" class="btn btn-outline-primary">Voir plus
                                ...</a>
                        </div>
                        <div class="border rounded py-2 px-2 ">
                            <p class="card-title"><strong>Email : </strong>{{ company.contactEmail }}</p>
                            <p class="card-title"><strong>Téléphone : </strong>{{ company.phone }}</p>
                            <p class="card-title"><strong>Ville : </strong>{{ company.city }}</p>
                            
                        </div>
                </div>
            </div>
        </div>
        {% endfor %}
    </div>
</div>
{% endblock %}