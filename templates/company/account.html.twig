{% extends 'base.html.twig' %}

{% block title %}Outdeed - Mon compte{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1 class="text-center font_title">Mon compte entreprise</h1>
</div>

<div class="container my-5 d-flex justify-content-evenly">

    <div id="info">
        <h2 class="mb-2">Informations de l'entreprise</h2>
        <span>{{ company.name }}</span> <br>
        <span>{{ company.category }}</span> <br>
        <span>{{ company.contactEmail }}</span> <br>
        
    </div>
    <div class="me-4">
        <img width="150" class="img-fluid" src="{{ asset(company.pdp) }}" alt="{{ company.name }}">
    </div>
   
</div>

{% endblock %}