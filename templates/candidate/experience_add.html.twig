{% extends 'base.html.twig' %}

{% block title %}Outdeed - Experience professionnelle{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1 class="text-center font_title">Nouvelle experience professionnelle</h1>
</div>

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-10 col-lg-8">
            <form method="post" id="addExperience">

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 mb-3">
                        <label for="job_name">Intitulé du poste * :</label>
                        <input type="text" name="job_name" id="job_name" class="form-control">
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 mb-3">
                        <label for="company_name">Nom de l'entreprise * :</label>
                        <input type="text" name="company_name" id="company_name" class="form-control">
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="row">
                    <div class="col-1"></div>
                    <div class="col-10 mb-3">
                        <label for="duration">Durée (en années) * :</label>
                        <input type="number" min="1" max="100" name="duration" id="duration" class="form-control">
                    </div>
                    <div class="col-1"></div>
                </div>

                <div class="mb-3 text-center">
                    <input type="submit" value="Ajouter" class="btn btn-success">
                </div>

            </form>
        </div>
    </div>

</div>

{% endblock %}