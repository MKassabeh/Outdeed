{% extends 'base.html.twig' %}

{% block title %}Outdeed - Mon compte{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1 class="text-center font_title">Mon compte</h1>
</div>

{% if app.user.userType == "candidate" %}
<div class="container my-5 d-flex justify-content-evenly">
    <img src="{{candidate.pdp}}" width="300" alt="">

    <div id="info">
        <h2 class="mb-2">Informations personnelles</h2>
        <span>Nom complet : {{candidate.firstName}} {{candidate.lastName}}</span><br>
        <span>Numéro de téléphone portable : {{candidate.phoneNumber}}</span><br>
        <span>Ville de résidence : {{candidate.city}}</span><br>
        <span>Adresse : {{candidate.address}}</span><br>
        <span>Date de naissance : {{candidate.birthdate|date('d-m-Y') }}</span><br>
    </div>

    <div>

        <div class="mb-5">
            <h2 class="mb-2">Mes expériences professionnelles</h2>
            {% if experiences %}
            {% for experience in experiences %}
            <div class="mb-3 border p-3">
                <h3 class="text-center">{{ experience.companyName }}</h3>
                <p class="text-center">{{ experience.jobName }} pandant {{ experience.duration }} {% if
                    experience.duration == 1 %} an {% else %} ans {% endif %}</p>
                <div class="text-center">
                    <a class="btn btn-outline-secondary"
                        href="{{ path('experience_edit', {id: experience.id}) }}">Editer</a>
                    <a class="btn btn-outline-danger"
                        href="{{ path('experience_delete', {id: experience.id}) }}">Supprimer</a>
                </div>
            </div>
            {% endfor %}
            {% endif %}
            <a href="{{ path('experience_add') }}" class="btn btn-outline-success">Ajouter une expérience</a>

        </div>

        <div>
            <h2 class="mb-2">Mes compétences techniques</h2>
            {% if skills %}
            {% for skill in skills %}
            <div class="mb-3 border p-3">
                <h3 class="text-center">{{ skill.skillName }}</h3>
                <p class="text-center">{{ skill.yearsOfExperience }} {% if
                    skill.yearsOfExperience == 1 %} an {% else %} ans {% endif %}d'experience</p>
                <div class="text-center">
                    <a class="btn btn-outline-secondary"
                        href="{{ path('skill_edit', {id: skill.id}) }}">Editer</a>
                    <a class="btn btn-outline-danger"
                        href="{{ path('skill_delete', {id: skill.id}) }}">Supprimer</a>
                </div>
            </div>
            {% endfor %}
            {% endif %}
            <a href="{{ path('skill_add')}}" class="btn btn-outline-success">Ajouter une compétence</a>

        </div>
    </div>
</div>
{% else %}
<p>ESPACE COMPANY</p>
{% endif %}

{% endblock %}