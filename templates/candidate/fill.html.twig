{% extends 'base.html.twig' %}

{% block title %}Ajouter un job{% endblock %}

{% block body %}

<div class="container mt-3">
    <h1 class="text-center font_title">Mise à jour des informations personnelles</h1>
</div>

<div class="container my-5">
    <form method="post" id="fillCandidate">        
        <div class="mb-3">
            <label for="first_name">Prénom * :</label>
            <input type="text" name="first_name" id="first_name" class="form-control">
        </div>
        <div class="mb-3">
            <label for="last_name">Nom de famille * :</label>
            <input type="text" name="last_name" id="last_name" class="form-control">
        </div>
        <div class="mb-3">
            <label for="phone">Numéro de téléphone portable * (au format '0601020304') :</label>
            <input type="text" name="phone" id="phone" class="form-control">
        </div>
        <div class="mb-3">
            <label for="city">Ville * :</label>
            <input type="text" name="city" id="city" class="form-control">
        </div>

        <div class="mb-3">
            <input type="submit" value="Sauvegarder" class="btn btn-success">
        </div>
    </form>
</div>

{% endblock %}