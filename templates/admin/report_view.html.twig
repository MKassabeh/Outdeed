{% extends 'base_admin.html.twig' %}

{% block title %}Outdeed - Détails d'une offre{% endblock %}

{% block body %}
<div class="container mt-3 py-3">
    <div class="row justify-content-center ">
        <div class="col-8 col-md-8 col-lg-8 blanc">
            <h1 class="text-center font_title fw-bold">Signalement</h1>
        </div>
    </div>
</div>
<div class="container my-5 ">
    <div class="row justify-content-center ">
        <div class="col-8 col-md-8 col-lg-8 blanc">
            <div class="card-container  justify-content-around text-center">
                <div class="card-body">
                    <div class="head">
                        <h1 class="mb-2 font_title">
                            {{ report.title|capitalize }}
                        </h1>
                    </div>
                    <div class="d-flex flex-column">
                        <div>
                            <p class="text_head"><strong class="title_font">Description : </strong> {{report.description}}</p>
                            <a class="btn btn-outline-success" href="{{ path('admin_reported', {id: report.id}) }}">Archivé le signalement</a>          
                    </div>
                </div>                
            </div>
        </div>
    </div>
</div>

{% endblock %}